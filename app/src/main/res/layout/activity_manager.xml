<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral60"
    tools:context=".screens.ManagerActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="219dp"
        android:layout_height="57dp"
        android:text="Manager page"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="49dp" />

    <Button
        android:id="@+id/btnUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Users"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="187dp" />

    <Button
        android:id="@+id/btnRevenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Revenges"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/btnReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch Reviews"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="309dp" />
</androidx.constraintlayout.widget.ConstraintLayout>